<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C5C4C4"
    android:orientation="vertical"
    app:cardElevation="@dimen/space_3"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:weightSum="4">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/order_id"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />



                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:gravity="left"
                    android:padding="1dp"

                    android:id="@+id/tv_order_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ID"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/place_on"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small" />

                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:gravity="left"
                    android:padding="1dp"

                    android:id="@+id/tv_order_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/socity"

                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small" />

                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:gravity="left"
                    android:padding="1dp"

                    android:id="@+id/tv_societyname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rec_nm"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small" />

                <com.gogrocerdb.tcc.Fonts.LatoBLack

                    android:padding="1dp"

                    android:id="@+id/tv_recivername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/green"></TextView>
        <LinearLayout
            android:weightSum="3"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.gogrocerdb.tcc.Fonts.LatoBLack
                android:layout_weight="1"
                android:id="@+id/tv_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_8"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_normal" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight=".6"
                    android:text="@string/time_t"
                    android:gravity="left"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small" />

                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:padding="1dp"

                    android:id="@+id/tv_order_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="2.4"
                    android:text="time"
                    android:gravity="center"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/tt_t"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small" />

                <com.gogrocerdb.tcc.Fonts.LatoBLack
                    android:gravity="center"
                    android:id="@+id/tv_order_item"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ArtÃ­culo total"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green"></TextView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
    <com.gogrocerdb.tcc.Fonts.LatoBLack
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/rec_num"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_small" />

    <com.gogrocerdb.tcc.Fonts.LatoBLack
        android:id="@+id/tv_recivernmobile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="#000"
        android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/gray" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.gogrocerdb.tcc.Fonts.LatoBLack
                android:id="@+id/tv_order_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pr"
                android:textColor="#000"
                android:textSize="@dimen/text_size_large" />

            <com.gogrocerdb.tcc.Fonts.LatoBLack
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.gogrocerdb.tcc.Fonts.LatoBLack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tracking_st"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_small" />

            <com.gogrocerdb.tcc.Fonts.LatoBLack
                android:padding="1dp"

                android:id="@+id/tracking_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:text="Date"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:orientation="vertical">
            <com.gogrocerdb.tcc.Fonts.LatoBLack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textColor="#000000"
                android:textSize="22sp" />

            <com.gogrocerdb.tcc.Fonts.LatoBLack

                android:padding="1dp"
                android:id="@+id/tv_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/dark_gray"
                android:text="alkjdlkajdlakjdlkajdlka"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:id="@+id/pend"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/space_14"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp"

            android:layout_marginBottom="6dp">

            <com.gogrocerdb.tcc.Fonts.LatoBLack
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Click for Details"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_small" />




        </RelativeLayout>
    </LinearLayout>

    <com.gogrocerdb.tcc.Fonts.LatoBLack
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_weight="1"
        android:text="@string/hus_n"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_small" />

    <com.gogrocerdb.tcc.Fonts.LatoBLack
        android:visibility="invisible"
        android:id="@+id/tv_house"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_4"
        android:layout_weight="1"
        android:text=""
        android:textColor="#000" />

</android.support.v7.widget.CardView>